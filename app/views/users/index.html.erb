<div class="page-header">
  <h1>
    Users
    <i class="fa fa-users fa-1x" aria-hidden="true"></i>
    <!-- <a href="/users/new" class="btn btn-lg btn-success">New User</a> -->
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Username</th>
        <th>E-mail</th>
        <!-- <th>Password</th> -->
        <th>First Name</th>
        <th>Last Name</th>
        <th>Number of Ideas</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%= user.id %>"><%= user.username %></a></td>
        <td><%= user.email %></td>
        <!-- <td><%= user.password %></td> -->
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.date_ideas.count%></td>
        </td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary"><i class="fa fa-search-plus fa-2x" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
