<div class="page-header">
  <h3><%= @venue.venue_title %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <!-- <dt>Date</dt>
      <dd><%= @venue.date_id %></dd> -->

      <dt>Venue Title</dt>
      <dd><%= @venue.venue_title %></dd>

      <dt>Venue Description</dt>
      <dd><%= @venue.venue_description %></dd>

      <dt>Website URL</dt>
      <dd><a href="<%= @venue.website_url %>"><%= @venue.website_url %></a></dd>

      <dt>Street Address</dt>
      <dd><%= @venue.street_address %></dd>

      <dt>City</dt>
      <dd><%= @venue.city %></dd>

      <dt>State</dt>
      <dd><%= @venue.state %></dd>

      <dt>Zip Code</dt>
      <dd><%= @venue.zip_code %></dd>



    </dl>


  </div>
</div>


<!-- A Venue has many dates -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Dates That Use This Venue:
      </li>

      <% @venue.dates.each do |idea| %>
        <li class="list-group-item">
          <a href="/ideas/<%= idea.id %>">
            <%= idea.date_title %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/ideas/<%= idea.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <!-- <a href="/ideas/<%= idea.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a> -->
            <!-- <a href="/delete_idea/<%= idea.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i> -->
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="btn-group btn-group-justified">
  <a href="/venues" class="btn btn-primary">
    Back
  </a>
  <a href="/venues/<%= @venue.id %>/edit" class="btn btn-warning">
    Edit
  </a>
  <!-- <a href="/delete_venue/<%= @venue.id %>" class="btn btn-danger" rel="nofollow">
    Delete
  </a> -->
</div>
