<!-- Validation failure messages -->
<% if @idea.errors.any? %>
  <% @idea.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3><%= @idea.date_title %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_idea/<%= @idea.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">


      <!-- Label and input for date_title -->
      <div class="form-group">
        <label for="date_title" class="control-label">
          Date Title
        </label>

        <input type="text" id="date_title" name="date_title" placeholder="Date Title" class="form-control" value="<%= @idea.date_title %>">
      </div>

      <!-- Label and input for date_description -->
      <div class="form-group">
        <label for="date_description" class="control-label">
          Date Description
        </label>

        <input type="text" id="date_description" name="date_description" placeholder="Date Description" class="form-control" value="<%= @idea.date_description %>">
      </div>

      <!-- Label and input for price_category -->
      <div class="form-group">
        <label for="price_category" class="control-label">
          Price Category
        </label>

        <select type="string" class="form-control" id="price_category" name="price_category"  placeholder = "Select One" value="<%= @idea.price_category %>">
          <option><%= @idea.price_category %></option>
          <option>Inexpensive</option>
          <option>Mid-Range</option>
          <option>Pricy</option>
          <option>Luxurious</option>
        </select>

      </div>

      <button class="btn btn-warning">
        Update Date Idea
      </button>
      or
      <a href="/ideas/<%= @idea.id %>">Cancel</a>
    </form>
  </div>
</div>
